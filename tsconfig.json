{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "configs"
  ]
}