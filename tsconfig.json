{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@configs": ["configs"],
      "@contracts/*": ["contract/build/contracts/*"]
    }
  },
  "include": ["src/**/*", "configs"]
}
